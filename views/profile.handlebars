<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <p>{{count}}已評論的餐廳</p>
    <br>
    {{#if user.isUser}}
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    {{/if}}
  </div>
</div>
<div class="card">
  <div class="card-header">
    {{count}}已評論的餐廳
  </div>
  <div class="card-body d-flex">
    {{#each restaurants}}
      <a href="/restaurants/{{this.id}}">
        <img src="{{this.image}}" alt="" style="width: 100px;margin-right: 25px;">
      </a>
    {{/each}}
  </div>
</div>